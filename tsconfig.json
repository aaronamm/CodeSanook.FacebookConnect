{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "react",
        "strict": true,
        "noImplicitReturns": true,
        "rootDir": "scripts",
        "outDir": "scripts"
    },
    "include": ["scripts/**/*.ts"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}
